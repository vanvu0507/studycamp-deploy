                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Next</span>
                    </button>
                      <%} %>
                  </div>
                        <div class="card-body">
                          <h5 class="card-title">
                            <%= course.title %>
                          </h5>
                          <div class="d-flex justify-content-between">
                            <p class="card-text">
                              <%= course.category %>
                            </p>
                            <p class="card-text text-success">
                              <%= course.price %> vnd
                            </p>
                          </div>
                          <div class="d-flex align-items-lg-baseline justify-content-end">
                            <form action="/home/<%= course._id %>" method="post">
                              <button class="btn"><i class="far fa-heart"></i></button>
                            </form>
                            <p><%= course.hearts.length %></p>
                          </div>
                        </div>
                      </div>
                    </div>
                    <%}%>
                  <%} %> 
                <%} %> 

                <% if(category == 'Kỹ năng nâng cao') {%>
                  <h2 class="mt-2">
                    <%= category.toUpperCase() %>
                  </h2>
                  <% for(let course of courses) {%>
                    
                      <%if(course.category == 'Kỹ năng nâng cao') {%>
                        <div class="col-lg-3 mt-3">
                        <div class="card" style="width: 18rem;">
                          <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
                    <div class="carousel-inner">
                      <% course.images.forEach((img,index) => {%>
                        <div class="carousel-item <%= index === 0 ? 'active' : ''%>">
                          <img src="<%= img.url %> " class="d-block w-100" alt="...">
                        </div>
                      <%}) %>
                    </div>
                    <% if(course.images.length > 1){%>
                      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Next</span>
                    </button>
                      <%} %>
                  </div>
                          <div class="card-body">
                            <h5 class="card-title">
                              <%= course.title %>
                            </h5>
                            <div class="d-flex justify-content-between">
                              <p class="card-text">
                                <%= course.category %>
                              </p>
                              <p class="card-text text-success">
                                <%= course.price %> vnd
                              </p>
                            </div>
                            <div class="d-flex align-items-lg-baseline justify-content-end">
                              <form action="/home/<%= course._id %>" method="post">
                                <button class="btn"><i class="far fa-heart"></i></button>
                              </form>
                              <p><%= course.hearts.length %></p>
                            </div>
                          </div>
                        </div>
                      </div>
                      <%}%>
                    <%} %> 
                  <%} %> 
          
        <%} %>
    </div>

  </div>
  
  <%- include('../partials/footer') %> 
